<%= form_with(model: user) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_area :email, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :profile %>
    <%= f.text_area :profile, class: 'form-control', rows: 10 %>
  </div>
  <%= f.submit "更新する", class: 'btn btn-primary' %>
<% end %>
