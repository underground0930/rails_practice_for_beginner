<div class="container">
  <div style="width:400px; display:flex; margin: 40px auto 0;">
    <div>
      <%= gravatar_for @user %>  
    </div>
    <div>
      <dl>
        <dt>name:</dt>
        <dd><%= @user.name %></dd>
        <dt>email:</dt>
        <dd><%= @user.email %></dd>
        <dt>profile:</dt>
        <dd><%= @user.profile %></dd>
      </dl>
      <% if current_user?(@user) %>
        <div>
          <%= link_to '編集する', edit_user_path(@user), class: 'btn btn-success btn-sm' %>    
        </div>
      <% end %>
    </div>
  </div>
  <hr>
  <div class="text-center">
    <%= link_to "トップページへ戻る", root_path %>
  </div>
</div>
